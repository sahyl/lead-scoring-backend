{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types":["node"],
    "resolveJsonModule": true,
    "moduleResolution": "node16", // Ensure Node.js module resolution
    "typeRoots": ["./node_modules/@types", "./node_modules"] // Look for types in node_modules
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}