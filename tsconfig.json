{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                  // ✅ Simplest, no .js extensions needed
    "moduleResolution": "bundler",            // ✅ Classic Node resolution

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,               // Allows default imports like express
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": ["node", "jest"],             // For Node and Jest typings
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
